extends ../layouts/default

block content
	if empresaSubmitted && usuarioSubmitted && pessoaSubmitted
		.container
			.row
				.col-md-12.text-center
					h1.green Sua solicitação de cadastro foi concluida!
					h3.green Aguarde,  em breve voce receberá um email com instruções de como proceder. 
	else if cadastroCnpj
		if empresaExistente
			.container
				.row
					.col-md-12.text-center
						h1.green CNPJ já está cadastrado em nosso sistema!
		else 
			.container
				.row
					.col-md-12.text-center
						h2.orange Nova Empresa por aqui?
						p
							i 
								strong Comprador ou Vendedor:
								|  Fique por dentro do que movimenta São Paulo
				.row
					.col-md-12.rule-bottom.text-center
						h3 Cadastro Instituição
				.row
					.col-sm-8
						form(method='post').form-horizontal
							input(type='hidden', name='action', value='isCnpj').
							.row
								.col-xm-12.col-md-7
									.col-xm-12.col-md-6
										.form-group(class=validationErrors.empresaType ? 'has-error' : null required)
											label.sr-only.col-sm-2.control-label.sr-only Tipo de Instituição 
											select(name='empresaType' required x-moz-errormessage="Por favor selecione um tipo de Instituição.").form-control
												option(value='') Tipo de Instituição
												each tipo in empresaTypes
													option(value=tipo.value selected=formData.empresaType === tipo.value)= tipo.label
									.col-xm-12.col-md-5.col-md-offset-1
										.form-group
											label.sr-only.col-sm-2.control-label.sr-only CNPJ
											input(type='text' name='cnpj' required x-moz-errormessage="Por favor preencha esse campo." placeholder='CNPJ').form-control
							.row
								.col-md-12.text-center
									button(type='submit').btn.green.small Enviar
	else if cadastroInstituicao
		.container
			.row
				.col-md-12.text-center
					h2.orange Nova Empresa por aqui?
					p
						i
							strong Comprador ou Vendedor:
							|  Fique por dentro do que movimenta São Paulo
			.row
				.col-md-12.rule-bottom.text-center
					h3 Dados do Cadastro
					form(method='post').form-horizontal
						input(type='hidden', name='action', value='cadastroEmpresa')
						input(type='hidden' name='cnpj' value = cnpj)
						input(type='hidden' name='empresaType' value = empresaType)
						.row.no-bottom-margin
							.col-xm-12.col-md-7
								.col-md-12
									.form-group
										
										label.col-sm-4.text-left Nome Fantasia
										input(type='text' name='nomeFantasia' placeholder='Nome Fantasia').form-control
									.form-group
										label.col-sm-4.text-left Razão Social
										input(type='text' name='razaoSocial' required x-moz-errormessage="Por favor preencha esse campo." placeholder='Razão Social').form-control
									.form-group
										label.col-sm-4.text-left Descrição
										input(type='text' name='descricao' placeholder="Breve Descrição").form-control
							.col-xm-12.col-md-5
								.col-md-12
									.form-group
										label.col-sm-4.text-left Contato Comercial
										input(type='text' name='contatoComercial' placeholder='Contato Comercial').form-control
									.form-group
										label.col-sm-4.text-left Telefone
										input(type='text' name='telefone' placeholder='Telefone (Ex. (00)0000-0000) - Ramal').form-control
									.form-group(class=validationErrors.email ? 'has-error' : null)
										label.col-sm-4.text-left Email
										input(type='email' name='email' required x-moz-errormessage="Por favor preencha com um email válido." placeholder='Email').form-control
						.row
							.col-md-12.rule-bottom.text-center
								h3 Localização
						.row
							.col-xm-12.col-md-6
								.col-md-12
									.form-group
										label.col-sm-4.text-left Endereço:
										input(type='text' name='endereco.street1' required x-moz-errormessage="Por favor preencha esse campo." placeholder="Endereço").form-control
							.col-xm-12.col-md-6
								.form-group
									.col-sm-3
										label.col-sm-4.text-left Número:
										input(type='text' name='endereco.number' required x-moz-errormessage="Por favor preencha esse campo." placeholder='Nº (Ex.999)').form-control
									.col-sm-6
										label.col-sm-4.text-left CEP:
										input(type='text' name='endereco.postcode' required x-moz-errormessage="Por favor preencha esse campo." placeholder='CEP (Ex. 00000-000)').form-control
									.col-sm-3
										label.col-sm-4.text-left Estado:
										input(type='text' name='endereco.state' required x-moz-errormessage="Por favor preencha esse campo." placeholder='Estado').form-control
							.col-xm-12.col-md-6
								.col-md-12
									.form-group
										label.col-sm-4.text-left Complemento:
										input(type='text' name='endereco.name' required x-moz-errormessage="Por favor preencha esse campo." placeholder="Complemento").form-control
									.form-group
										label.col-sm-4.text-left Bairro:
										input(type='text' name='endereco.street2' required x-moz-errormessage="Por favor preencha esse campo." placeholder='Bairro').form-control
										
							.col-xm-12.col-md-6
								.col-md-12
									.form-group
										label.col-sm-4.text-left Cidade:
										input(type='text' name='endereco.suburb' required x-moz-errormessage="Por favor preencha esse campo." placeholder='Cidade').form-control
									
						.row
							.col-xm-12.col-md-6
								.col-md-12
									.rule-bottom.text-center.margin-bottom-15
										h3 Representante Legal
									.form-group
										label.col-sm-4.text-left Nome:
										input(type='text' name='nome' required x-moz-errormessage="Por favor preencha esse campo." placeholder="Nome").form-control
									.form-group
										label.col-sm-4.text-left CPF:
										input(type='text' name='cpf' required x-moz-errormessage="Por favor preencha esse campo." placeholder="CPF (Ex. 000.000.000-00)").form-control
							.col-xm-12.col-md-6
								.col-md-12
									.rule-bottom.text-center
										h3 Sua Empresa na Web
									.form-group
										label.col-sm-4.text-left WebSite
										input(type='text' name='webSite' placeholder='Web Site').form-control
									.form-group
										label.col-sm-4.text-left Facebook
										input(type='text' name='facebook' placeholder='Facebook').form-control
									.form-group
										label.col-sm-4.text-left Twitter
										input(type='text' name='twitter' placeholder='Twitter').form-control
						.row
							.col-md-12.text-center
								.form-group
									button(type='submit').btn.green Enviar
	else if cadastroUsuario
		.container
			.row
				.col-md-12.text-center
					h2.orange Nova Empresa por aqui?
					p
						i 
							strong Comprador ou Vendedor:
							|  Fique por dentro do que movimenta São Paulo
			.row
				.col-md-12.rule-bottom.text-center
					h3 Cadastro Email
			.row
				.col-sm-8
					form(method='post').form-horizontal
						input(type='hidden', name='action', value='cadastroEmail').
						.row
							.col-xm-12.col-md-6
								.col-md-12
									.form-group(class=validationErrors.email ? 'has-error' : null)
										label.col-sm-4.text-left Email
										input(type='email' name='email' required x-moz-errormessage="Por favor preencha com um email válido." placeholder='Email').form-control
						.row
							.col-md-12.text-center
								button(type='submit').btn.green.small Enviar
	
