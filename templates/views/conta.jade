extends ../layouts/default

block content
	.container
		.row
			.col-md-12.text-center
				h2.orange Nova Empresa por aqui?
				p
					i
						strong Comprador ou Vendedor:
						|  Fique por dentro do que movimenta São Paulo
		.row
			.col-md-12.rule-bottom.text-center
				h3 Dados do Cadastro
				form(method='post').form-horizontal
					input(type='hidden', name='action', value='update')
					input(type='hidden' name='id' value = empresaf.id)					
					.row.no-bottom-margin
						.col-xm-12.col-md-7
							.col-md-12
								.form-group
									label.sr-only.col-sm-2.text-left.control-label.sr-only Nome Fantasia
									input(type='text' name='nomeFantasia' required x-moz-errormessage="Por favor preencha esse campo." placeholder='Nome Fantasia' value = empresaf.nomeFantasia).form-control
									.form-group
										label.sr-only.col-sm-2.text-left.control-label.sr-only Descrição
										input(type='text' name='descricao' placeholder="Breve Descrição" required x-moz-errormessage="Por favor preencha esse campo." value = empresaf.descricao).form-control
									.form-group
										label.sr-only.col-sm-2.text-left.control-label.sr-only CPF:
										input(type='text' name='cpf' required x-moz-errormessage="Por favor preencha esse campo." placeholder="CPF (Ex. 000.000.000-00)" value = pessoaf.cpf).form-control
								.form-group
									label.sr-only.col-sm-2.text-left.control-label.sr-only Nome:
									input(type='text' name='nome' required x-moz-errormessage="Por favor preencha esse campo." placeholder="Nome" value = pessoaf.nome).form-control
									.form-group(class=validationErrors.email ? 'has-error' : null)
										label.sr-only.col-sm-2.text-left.control-label.sr-only Email
										input(type='email' name='email' required x-moz-errormessage="Por favor preencha com um email válido." placeholder='Email' value = usuariof.email).form-control
									.form-group
										label.sr-only.col-sm-2.control-label.sr-only Contato Comercial
										input(type='text' name='contatoComercial' placeholder='Nome do Contato Comercial' required x-moz-errormessage="Por favor preencha esse campo." value = empresaf.contatoComercial).form-control
									.form-group
										label.sr-only.col-sm-2.control-label.sr-only Telefone
										input(type='text' name='telefone' required x-moz-errormessage="Por favor preencha esse campo." placeholder='Telefone (Ex. (00)0000-0000) - Ramal' value = empresaf.telefone).form-control
									.form-group
										label.sr-only.col-sm-2.control-label.sr-only Logo
										input(type='text' name='logo' placeholder='Url da imagem do logo' value = empresaf.logo).form-control
						.row
							.col-md-12.rule-bottom.text-center
								h3 Localização
						.row
							.col-xm-12.col-md-6
								.col-md-12
									.form-group
										label.control-label.sr-only Endereço:
										input(type='text' name='endereco.street1' required x-moz-errormessage="Por favor preencha esse campo." placeholder="Endereço" value = empresaf.endereco.street1).form-control
							.col-xm-12.col-md-6
								.form-group
									.col-sm-3
										label.control-label.sr-only Número:
										input(type='text' name='endereco.number' required x-moz-errormessage="Por favor preencha esse campo." placeholder='Nº (Ex.999)' value = empresaf.endereco.number).form-control
									.col-sm-6
										label.control-label.sr-only CEP:
										input(type='text' name='endereco.postcode' required x-moz-errormessage="Por favor preencha esse campo." placeholder='CEP (Ex. 00000-000)' value = empresaf.endereco.postcode).form-control
									.col-sm-3
										label.control-label.sr-only Estado:
										input(type='text' name='endereco.state' required x-moz-errormessage="Por favor preencha esse campo." placeholder='Estado' value = empresaf.endereco.state).form-control
							.col-xm-12.col-md-6
								.col-md-12
									.form-group
										label.control-label.sr-only Complemento:
										input(type='text' name='endereco.name' placeholder="Complemento" value = empresaf.endereco.name).form-control
									.form-group
										label.control-label.sr-only Bairro:
										input(type='text' name='endereco.street2' required x-moz-errormessage="Por favor preencha esse campo." placeholder='Bairro' value = empresaf.endereco.street2).form-control
										
							.col-xm-12.col-md-6
								.col-md-12
									.form-group
										label.control-label.sr-only Cidade:
										input(type='text' name='endereco.suburb' required x-moz-errormessage="Por favor preencha esse campo." placeholder='Cidade' value = empresaf.endereco.suburb).form-control
					.row
						.col-md-12.text-center
							.form-group
								button(type='submit').btn.green Enviarblock page-js
	script.