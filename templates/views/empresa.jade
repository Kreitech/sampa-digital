extends ../layouts/default

block content
	if empresaSubmitted
		.container
			.row
				.col-md-12.text-center
					h1.green Cadastro efetuado com sucesso!
	else
		.container
			.row
				.col-md-12.text-center
					h2.orange Nova Empresa por aqui?
					p
						i 
							strong Comprador ou Vendedor:
							|  Fique por dentro do que movimenta São Paulo
			.row
				.col-md-12.rule-bottom.text-center
					h3 Empresa
			form(method='post').form-horizontal
				input(type='hidden', name='action', value='cadastroEmpresa')		
				.row.no-bottom-margin
					.col-xm-12.col-md-7
						.col-md-12
							.form-group
								label.sr-only.col-sm-2.text-left.control-label.sr-only Nome Fantasia
								input(type='text' name='nomeFantasia' placeholder='Nome Fantasia').form-control
							.form-group
								label.sr-only.col-sm-2.text-left.control-label.sr-only Razão Social
								input(type='text' name='razaoSocial' placeholder='Razão Social').form-control
							.form-group
								label.sr-only.col-sm-2.text-left.control-label.sr-only Descrição
								input(type='text' name='descricao' placeholder='Descrição').form-control
					.col-xm-12.col-md-5
						.col-md-12
							.form-group
								label.sr-only.col-sm-2.control-label.sr-only Contato
								input(type='text' name='contato' placeholder='Contato').form-control
							.form-group
								label.sr-only.col-sm-2.control-label.sr-only Contato Comercial
								input(type='text' name='contatoComercial' placeholder='Contato Comercial').form-control
							.form-group
								label.sr-only.col-sm-2.control-label.sr-only Telefone
								input(type='text' name='telefone' placeholder='Telefone (Ex. (00)0000-0000)').form-control
				.row
					.col-xm-12.col-md-7
						.col-xm-12.col-md-6
							.form-group
								label.sr-only.col-sm-2.control-label.sr-only CNPJ
								input(type='text' name='cnpj' placeholder='CNPJ').form-control
						.col-xm-12.col-md-5.col-md-offset-1
							.form-group
								label.sr-only.col-sm-2.control-label.sr-only CNAE
								select(name='cnae').form-control
									option(value='') Selecione o CNAE
									each cnae in cnaes
										option(value=cnae.id) #{cnae.codigo}
					.col-xm-12.col-md-5
						.col-md-12
							.form-group
								label.sr-only.col-sm-2.control-label.sr-only Logo
								input(type='text' name='logo' placeholder='Logo').form-control
				.row
					.col-xm-12.col-md-7
						.col-md-12
							.rule-bottom.text-center
								h3 Localização
							.form-group
								label.sr-only.col-sm-2.text-left.control-label.sr-only Endereço
								input(type='text' name='endereco.street1' placeholder='Endereço').form-control
							.form-group
								label.sr-only.col-sm-2.text-left.control-label.sr-only Número
								input(type='text' name='endereco.number' placeholder='Número (Ex. 9999)').form-control
							.form-group
								label.sr-only.col-sm-2.text-left.control-label.sr-only CEP
								input(type='text' name='endereco.postcode' placeholder='CEP (Ex. 000.00-000)').form-control
					.col-xm-12.col-md-5
						.col-md-12
							.rule-bottom.text-center
								h3 Sua Empresa na Web
							.form-group
								label.sr-only.col-sm-2.control-label.sr-only Twitter
								input(type='text' name='twitter' placeholder='Twitter').form-control
							.form-group
								label.sr-only.col-sm-2.control-label.sr-only Facebook
								input(type='text' name='facebook' placeholder='Facebook').form-control
							.form-group
								label.sr-only.col-sm-2.control-label.sr-only Linkedin
								input(type='text' name='linkedin' placeholder='linkedin').form-control
							.form-group
								label.sr-only.col-sm-2.control-label.sr-only WebSite
								input(type='text' name='webSite' placeholder='Web Site').form-control
				.row
					.col-md-12.text-center
						.form-group
							button(type='submit').btn.green Enviar
