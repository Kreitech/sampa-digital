extends ../layouts/default

block content
	if cpfCheck
		.page-header
			a(href='/keystone/pessoas').btn.btn-default.pull-right= user ? 'View Pessoas' : 'Sign in to View Pessoas'
			h1 Representante Legal
		.row
			.col-sm-8
				form(method='post').form-horizontal
					input(type='hidden', name='action', value='isCpf').
					.form-group
						label.col-sm-2.text-left.control-label CPF
						.col-sm-10
							input(type='text' name='cpf').form-control
					.form-group
						.col-sm-10.col-sm-offset-2
							p.help-block Note: others can see your pessoa in the <a href='/keystone/pessoas'>Admin UI</a>
							button(type='submit').btn.btn-primary Submit
	else
		.page-header
			a(href='/keystone/pessoas').btn.btn-default.pull-right= user ? 'View Pessoas' : 'Sign in to View Pessoas'
			h1 Representante Legal
		.row
			.col-sm-8
				form(method='post').form-horizontal
					input(type='hidden' name='cpf' value = cpf)
					input(type='hidden', name='action', value='cadastro').
					.form-group
						label.col-sm-2.text-left.control-label Nome
						.col-sm-10
							input(type='text' name='nome').form-control
					.form-group
						label.col-sm-2.text-left.control-label CEP
						.col-sm-10
							input(type='text' name='cep').form-control
					.form-group
						label.col-sm-2.text-left.control-label Endereço
						.col-sm-10
							input(type='text' name='endereco').form-control
					.form-group
						label.col-sm-2.text-left.control-label Número
						.col-sm-10
							input(type='text' name='enderecoNumero').form-control
					.form-group
						label.col-sm-2.text-left.control-label Bairro
						.col-sm-10
							input(type='text' name='bairro').form-control
					.form-group
						label.col-sm-2.text-left.control-label Cidade
						.col-sm-10
							input(type='text' name='cidade').form-control
					.form-group
						label.col-sm-2.text-left.control-label Estado
						.col-sm-10
							input(type='text' name='estado').form-control
					.form-group
						.col-sm-10.col-sm-offset-2
							p.help-block Note: others can see your pessoa in the <a href='/keystone/pessoas'>Admin UI</a>
							button(type='submit').btn.btn-primary Submit
			.col-sm-4
				.panel.panel-default
					.panel-heading
						h3.panel-title Resources
					.panel-body Well that's it for the demo, but you can find out more from these links:
					.list-group
						a(href='http://github.com/KeystoneJS/keystone-demo', target='_blank').list-group-item GitHub Repo
						a(href='http://www.keystonejs.com/guide', target='_blank').list-group-item Documentation
						a(href='https://groups.google.com/d/forum/keystonejs', target='_blank').list-group-item Google Group
