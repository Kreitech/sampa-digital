extends ../layouts/default

block content
	if pessoaSubmitted
		.container
			.row
				.col-md-12
					h2 Cadastro efetuado com sucesso!
	else
		.container
			.row
				.col-md-12.text-center
					h2.orange Nova Empresa por aqui?
					p
						i 
							strong Comprador ou Vendedor:
							|  Fique por dentro do que movimenta São Paulo
			.row
				.col-md-12.rule-bottom.text-center
					h3 Pessoa
			form(method='post').form-horizontal
				input(type='hidden', name='action', value='cadastro').
				.row
					.col-xm-12.col-md-6
						.col-md-12
							.form-group
								label.control-label.sr-only Nome:
								input(type='text' name='nome' placeholder="Nome").form-control
					.col-xm-12.col-md-6
						.col-md-12
							.form-group							
								label.control-label.sr-only CPF:
								input(type='text' name='cpf' placeholder="CPF (Ex. 00.000.000-0)").form-control
				.row
					.col-xm-12.col-md-6
						.col-md-12
							.form-group
								label.control-label.sr-only Endereço:
								input(type='text' name='endereco.street1' placeholder="Endereço").form-control
					.col-xm-12.col-md-6
						.form-group
							.col-sm-3
								label.control-label.sr-only Número:
								input(type='text' name='endereco.number' placeholder="Nº (Ex.999)").form-control								
							.col-sm-9
								label.control-label.sr-only CEP:
								input(type='text' name='endereco.postcode' placeholder="CEP (Ex. 000.00-000").form-control
				.row
					.col-md-12.text-center
						button(type='submit').btn.green.small Enviar
