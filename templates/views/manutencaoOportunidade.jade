extends ../layouts/default

block content
	.container
		.row
			.col-md-12.text-center
				h2.orange Nova Empresa por aqui?
				p
					i
						strong Comprador ou Vendedor:
						|  Fique por dentro do que movimenta São Paulo
		.row
			.col-md-12.rule-bottom.text-center
				h3 Dados do Cadastro
				form(method='post').form-horizontal
					input(type='hidden', name='action', value='update')
					input(type='hidden' name='id' value = oportunidade.id)					
					.row.no-bottom-margin
						.col-xm-12.col-md-7
							.col-md-12
									.form-group
										label.sr-only.col-sm-2.text-left.control-label.sr-only Nome
										input(type='text' name='nome' placeholder='Nome' value = oportunidade.nome).form-control
									.form-group
										label.sr-only.col-sm-2.text-left.control-label.sr-only Breve Descrição
										input(type='text' name='breveDescricao' required x-moz-errormessage="Por favor preencha esse campo." placeholder='Breve Descrição' value = oportunidade.breveDescricao).form-control
									.form-group
										label.sr-only.col-sm-2.text-left.control-label.sr-only Descrição detalhada
										textarea(type='text' name='descricaoDetalhada' rows=4 placeholder="Descrição Detalhada" value = oportunidade.descricaoDetalhada).form-control
					.row
						.col-md-12.text-center
							.form-group
								button(type='submit').btn.green Enviar