block content
	if locals.oportunidades
		.bg-pb
			.container
				p Ordenar por: 
					a(href='#') Mais recentes
					|&nbsp;/&nbsp;
					a(href='#') Mais antigas
					| &nbsp;/&nbsp;
					a(href='#') A-Z
					|&nbsp; /&nbsp;
					a(href='#') Z-A
				if oportunidades.length
					each oportunidade in oportunidades
						.row
							.col-md-2.text-center
								if oportunidade.image
									img.fit(oportunidade.image.fit(160,160))
								else
									img.fit(src='/images/noticia_padrao.png')
							.col-md-10
								h3.no-margin: = oportunidade.nome
								p 
									if oportunidade.empresa
										span.orange
											| Empresa #{oportunidade.empresa}
									else
										span.orange
											| Empresa da bananinha
									| &nbsp;| Publicado em:
									if oportunidade.createdAt
											span.orange 
												| #{oportunidade._.createdAt.format('DD')} de #{oportunidade._.createdAt.format('MMMM')} de #{oportunidade._.createdAt.format('YYYY')}
									else
											span.orange 
												| Bananas
								if oportunidade.descCurta
									p!= oportunidade.descCurta
								else
									p Bananosas bananudas!
								p.btn.small.orange: a(href='oportunidades?id=' + oportunidade.key) Leia mais
				else
					.row
						.col-md-12
							h3 Nenhuma oportunidade!
