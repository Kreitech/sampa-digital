extends ../layouts/default

block intro
	.container
		.row
			.col-md-12.text-center
				if oportunidades[0].tipoOportunidade == "VENDA"
					h2.orange Quero Vender!!
					p
						i Neque porro quisquam est qui dolorem ipsum quia dolor sit amet, consectetur, adipisci velit
				else
					h2.orange Quero Comprar!! 
					p
						i Neque porro quisquam est qui dolorem ipsum quia dolor sit amet, consectetur, adipisci velit

block content
	.bg-pb
		.container
			if oportunidades.length
				each oportunidade in oportunidades
					.row
						.col-md-2.text-center
							if oportunidade.image
								img.fit(oportunidade.image.fit(160,160))
							else
								img.fit(src='/images/noticia_padrao.png')
						.col-md-10
							h3.no-margin: = oportunidade.title
							p Publicado em:
								if oportunidade.publishedDate
										span.orange 
											| #{oportunidade.publishedDate.format('DD')} de #{oportunidade.publishedDate.format('MMMM')} de #{oportunidade.publishedDate.format('YYYY')}
							p!= oportunidade.descricaoBrief
								p.btn.small.orange: a(href='/blog/post/' + oportunidade.key) Leia mais
			else
				.row
					.col-md-12
						h3 Nenhuma oportunidade!
