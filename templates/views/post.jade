extends ../layouts/default


include ../mixins/post

block content
	if !data.post
		.jumbotron.text-center
			h2 Notícia inválida...
			p Por favor, verifique a url. 
	else
		.container
			.row
				.col-md-12
					ul.breadcrumbs
						li
							a(href="/") Início
						li
							a(href="/blog") Notícias
				article
					header
						h2.orange= data.post.title
						p.orange Publicado em: 
							if data.post.publishedDate
								time(datetime=data.post.publishedDate)=data.post._.publishedDate.format('DD')
								|  de 
								time(datetime=data.post.publishedDate)=data.post._.publishedDate.format('MMMM')
								| de 
								time(datetime=data.post.publishedDate)=data.post._.publishedDate.format('YYYY')
						
						
						if data.post.image.exists
							img(src=data.post._.image.fit(750,500)).img-responsive
						!= data.post.content.full
